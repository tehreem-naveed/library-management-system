<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3F7">

    <!-- Orange Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#FF7043">
    </RelativeLayout>

    <!-- Avatar overlapping header -->
    <TextView
        android:id="@+id/avatarText"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="U"
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/circle_bg"
        android:elevation="6dp"
        android:clipToOutline="true"
        android:outlineProvider="background" />

    <!-- Full Name below avatar -->
    <TextView
        android:id="@+id/fullNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatarText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="It's UserName"
        android:textColor="#212121"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- @username with grey background -->
    <TextView
        android:id="@+id/usernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fullNameText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:background="#DDDDDD"
        android:padding="6dp"
        android:text="@username"
        android:textColor="#616161"
        android:textSize="14sp" />

    <!-- Flashcard below username -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameText"
        android:layout_marginTop="20dp"
        android:padding="24dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FFFFFF"
            android:elevation="10dp"
            app:cardCornerRadius="20dp"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Orange Buttons -->
                <Button
                    android:id="@+id/btnShowProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Profile Details"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF7043"
                    android:elevation="2dp"
                    android:layout_marginBottom="12dp"
                    android:padding="14dp" />

                <Button
                    android:id="@+id/btnUpdateProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Profile Details"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF7043"
                    android:elevation="2dp"
                    android:layout_marginBottom="12dp"
                    android:padding="14dp" />

                <Button
                    android:id="@+id/btnChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF7043"
                    android:elevation="2dp"
                    android:layout_marginBottom="12dp"
                    android:padding="14dp" />

                <!-- White Buttons with Orange Text -->
                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:textAllCaps="false"
                    android:textColor="#FF5722"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="2dp"
                    android:layout_marginBottom="12dp"
                    android:padding="14dp" />

                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textAllCaps="false"
                    android:textColor="#FF5722"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="2dp"
                    android:padding="14dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

</RelativeLayout>
