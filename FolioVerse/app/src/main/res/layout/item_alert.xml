<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="8dp"
    android:elevation="2dp"
    android:background="@android:color/white"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Left: Icon -->
        <ImageView
            android:id="@+id/alertIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_folioversedark"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/profile_circle_background"
            android:padding="4dp" />

        <!-- Center: Text block -->
        <LinearLayout
            android:id="@+id/alertTextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/alertIcon"
            android:layout_toStartOf="@id/alertImage"
            android:layout_marginStart="12dp"
            android:layout_alignTop="@id/alertIcon"
            android:layout_alignBottom="@id/alertIcon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alertTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Must-read queer stories ðŸŒˆ"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/alertDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="These stories are trending now. Donâ€™t miss them!"
                android:textColor="#555"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="13sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/alertTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“– 1:01 AM"
                android:textColor="#888"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Right: Thumbnail -->
        <ImageView
            android:id="@+id/alertImage"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cover_fantasy_1"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>