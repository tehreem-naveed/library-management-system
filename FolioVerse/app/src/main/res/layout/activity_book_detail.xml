<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bookDetailScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Book Cover -->
        <ImageView
            android:id="@+id/detailCoverImage"
            android:layout_width="180dp"
            android:layout_height="260dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:contentDescription="Book Cover" />

        <!-- Title -->
        <TextView
            android:id="@+id/detailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#222222"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <!-- Author -->
        <TextView
            android:id="@+id/detailAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="by Author Name"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <!-- Genre -->
        <TextView
            android:id="@+id/detailGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre: Fantasy"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginBottom="12dp" />

        <!-- Static Rating -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_star" />
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_star" />
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_star" />
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_star_half" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/detailDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is a short description of the book. Explore the world of fantasy, mystery, and magic!"
            android:textSize="15sp"
            android:textColor="#444444"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="20dp" />

        <!-- Buttons -->
        <Button
            android:id="@+id/readNowBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“– Read Now"
            android:backgroundTint="#FF5722"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/addToLibraryBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âž• Add to Library"
            android:backgroundTint="#EEEEEE"
            android:textColor="#333333"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>